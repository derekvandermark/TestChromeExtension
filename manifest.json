{
    "manifest_version": 3,
    "name": "turn chrome red",
    "version": "1.0",
    "description": "idk",
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["./background.js"]
        }
      ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
          "16": "images/bball.png",
          "32": "images/bball.png",
          "48": "images/bball.png",
          "128": "images/bball.png"
        }
      },
    "permissions": ["activeTab", "scripting"]
}